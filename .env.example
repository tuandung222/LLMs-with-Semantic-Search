# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key_here

# Weaviate configuration
WEAVIATE_URL=http://weaviate:8080
# WEAVIATE_API_KEY=your_weaviate_api_key_here

# API configuration
API_HOST=0.0.0.0
API_PORT=8000

# Demo app configuration
DEMO_PORT=8501
API_URL=http://search_server:8000

# Application settings
LOG_LEVEL=INFO
LOAD_SAMPLE_DATA=true

# Embedding configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_COMPLETION_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Weaviate Configuration
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8082  # External port for local access
WEAVIATE_SCHEMA_CLASS=Articles

# Kubernetes Settings (for production)
K8S_NAMESPACE=semantic-search
K8S_REPLICAS=2

# GCP Settings (for Terraform)
GCP_PROJECT_ID=your_project_id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Storage Settings
WEAVIATE_STORAGE_SIZE=10Gi
WEAVIATE_MEMORY_REQUEST=2Gi
WEAVIATE_MEMORY_LIMIT=4Gi
WEAVIATE_CPU_REQUEST=500m
WEAVIATE_CPU_LIMIT=1000m

# Optional: Cohere API Configuration (if using Cohere embeddings)
COHERE_API_KEY=your_cohere_api_key_here

# Optional: Other Configuration
DEBUG=False 